<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="CommunityTransitTrackerModel">
		<jta-data-source>java:jboss/datasources/ctt</jta-data-source>
		<class>gov.colorado.ctt.model.Agency</class>
		<class>gov.colorado.ctt.model.Calendar</class>
		<class>gov.colorado.ctt.model.CalendarDate</class>
		<class>gov.colorado.ctt.model.CalendarDatePK</class>
		<class>gov.colorado.ctt.model.FareAttribute</class>
		<class>gov.colorado.ctt.model.FareRule</class>
		<class>gov.colorado.ctt.model.FeedInfo</class>
		<class>gov.colorado.ctt.model.FeedInfoPK</class>
		<class>gov.colorado.ctt.model.Frequency</class>
		<class>gov.colorado.ctt.model.Route</class>
		<class>gov.colorado.ctt.model.Shape</class>
		<class>gov.colorado.ctt.model.ShapePK</class>
		<class>gov.colorado.ctt.model.StopTime</class>
		<class>gov.colorado.ctt.model.StopTimePK</class>
		<class>gov.colorado.ctt.model.Stop</class>
		<class>gov.colorado.ctt.model.Transfer</class>
		<class>gov.colorado.ctt.model.TransferPK</class>
		<class>gov.colorado.ctt.model.Trip</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLInnoDBDialect" />
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.formal_sql" value="true"/> 
		</properties>
	</persistence-unit>
</persistence>
